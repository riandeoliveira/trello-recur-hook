{
  "$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": ["src/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "noUselessStringConcat": "warn",
        "noUselessUndefinedInitialization": "warn",
        "noVoid": "warn"
      },
      "correctness": {
        "noUndeclaredVariables": "warn",
        "noUnusedVariables": "off"
      },
      "nursery": {
        "useExplicitType": "off"
      },
      "recommended": true,
      "suspicious": {
        "noEmptyBlockStatements": "warn",
        "useAwait": "warn"
      },
      "style": {
        "noNamespace": "warn"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": false,
    "useIgnoreFile": false
  }
}
